---
const { margin, logo, extension, version } = Astro.props;
---

<div
  class=`flex flex-col items-center  pt-[40px] rounded-xl shadow-card ${margin} tablet:mt-0`
>
  <img src={logo} alt=`${extension} logo` width="100" height="100" />
  <span class="text-[20px] text-dark-blue font-medium mt-[30px]">Add to {extension}</span>
  <span class="text-[16px] text-gray tracking-[-0.5px] mt-[5px]">
    {version}
  </span>
  <div
    class="w-full h-[5px] bg-[url(/img/bg-dots.svg)] bg-no-repeat bg-center mt-[35px] mb-[5px]"
  >
  </div>
  <a
    href="#"
    class="w-[80%] text-[14px] text-center font-medium tracking-[0.1px] bg-blue text-white py-[12px] mt-[21px] border-2 border-transparent rounded-md mb-[25px] shadow-btn hover:text-blue hover:bg-white hover:border-blue duration-200"
  >
    Add & Install Extension
  </a>
</div>
